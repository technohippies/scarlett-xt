{
  "manifest_version": 3,
  "name": "storybook",
  "version": "0.0.0",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon/16.png",
      "32": "/icon/32.png",
      "48": "/icon/48.png",
      "128": "/icon/128.png"
    },
    "default_title": "Scarlett Clipper"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage",
    "offscreen",
    "tabs",
    "notifications",
    "scripting"
  ],
  "optional_host_permissions": [
    "http://localhost:11434/*",
    "http://localhost:1234/*",
    "http://localhost:8080/*",
    "http://127.0.0.1:*/"
  ],
  "optional_permissions": [
    "history"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "@electric-sql/dist/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self'; worker-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  },
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "host_permissions": [
    "*://*/*",
    "http://localhost:3000/*"
  ]
}